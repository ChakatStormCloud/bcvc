{
    "manifest_version": 2,
    "name": "Bandcamp Volume Control",
    "description": "Adds a volume slider to bandcamp.",
    "version": "0.2.3",
    "icons": {
        "128": "icon.png"
    },
    "content_scripts": [
		{
			"matches": ["https://*.bandcamp.com/*", "https://music.monstercat.com/*", "https://shop.attackthemusic.com/*"],
			"js": ["content.js"],
            "all_frames": true
		}
	],
    "permissions": [
        "storage"
    ]
}
